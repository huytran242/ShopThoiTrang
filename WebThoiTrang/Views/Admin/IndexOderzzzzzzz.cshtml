@model IEnumerable<WebThoiTrang.Models.OrdersListDto>

@{
    ViewData["Title"] = "Orders List";
    Layout = "~/Views/Shared/_LayoutAd.cshtml";
}
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-md-6 col-8 align-self-center">
                <h3 class="page-title mb-0 p-0">Dashboard</h3>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="col-md-6 col-4 align-self-center">
                <div class="text-end upgrade-btn">
                    <a href="https://www.wrappixel.com/templates/monsteradmin/"
                       class="btn btn-success d-none d-md-inline-block text-white" target="_blank">
                        Upgrade to
                        Pro
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <h1 class="fw-bold mb-5">Your Orders</h1>

         <form asp-action="BulkDelete" asp-controller="Admin" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" id="search" placeholder="Search orders">
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="selectAll">
                    <label class="form-check-label" for="selectAll">
                        Select All
                    </label>
                </div>
        </form>
        @if (Model == null || !Model.Any())
        {
            <p>No orders found.</p>
        }
        else
        {
           
                @foreach (var order in Model)
                {
                    <div class="order-item mb-4">
                        <div class="form-check">
                            <input class="form-check-input order-checkbox" type="checkbox" name="orderIds" value="@order.OrderId">
                            <label class="form-check-label">
                                Order ID: @order.OrderId
                            </label>
                        </div>
                        <p><strong>Username:</strong> @order.Username</p>
                        <p><strong>Date:</strong> @order.CreatedAt.ToString("MMMM dd, yyyy")</p>
                        <p><strong>Total Amount:</strong> @order.TotalAmount.ToString("C")</p>
                        <p><strong>Status:</strong> @order.Status</p>

                        <h4>Order Items:</h4>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in order.Products)
                                {
                                    <tr>
                                        <td>
                                            <img src="@item.img" alt="@item.Name" class="img-fluid rounded-3" style="width: 100px;" />
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.Quantity</td>
                                        <td>@item.Price.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <!-- Button to confirm order completion -->
                        @if (order.Status != "Đã xong")
                        {
                            <form asp-action="ConfirmOrder" asp-controller="Admin" method="post" style="display:inline;">
                                <input type="hidden" name="orderId" value="@order.OrderId" />
                                <button type="submit" class="btn btn-success mt-2">Confirm</button>
                            </form>
                        }

                        <!-- Button to delete order -->
                        <form asp-action="DeleteOrder" asp-controller="Admin" method="post" style="display:inline;">
                            <input type="hidden" name="orderId" value="@order.OrderId" />
                            <button type="submit" class="btn btn-danger mt-2">Delete</button>
                        </form>

                        <hr class="my-4">
                    </div>
                }

                <button type="submit" class="btn btn-danger mt-2">Delete Selected</button>
            
        }
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer text-center">
        © 2021 Monster Admin by <a href="https://www.wrappixel.com/">wrappixel.com</a>
    </footer>
    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
</div>
<!-- ============================================================== -->
<!-- End Page wrapper  -->
<!-- ============================================================== -->
</div>
<script>
    document.getElementById("selectAll").addEventListener("click", function () {
        var checkboxes = document.querySelectorAll(".order-checkbox");
        for (var checkbox of checkboxes) {
            checkbox.checked = this.checked;
        }
    });
</script>